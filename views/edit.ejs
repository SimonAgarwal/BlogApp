<%- include ("partials/header")%>
<%var blog;%>
<div class="ui main text container segment">
	<div class="ui huge header">
		EDIT BLOG <%=blog.title%>
	</div>
	<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<input type="text" name="blog[title]" value="<%=blog.title%>" placeholder="title">
		</div>
		<div class="field">
			<input type="text" name="blog[image]" value="<%=blog.image%>" placeholder="image">
		</div>
		<div class="field">
			<textarea name="blog[body]"><%=blog.body%></textarea>
		</div>
		<div class="ui blue basic button">
			<input type="submit">
		</div>
		
	</form>
</div>

<%- include ("partials/footer")%>